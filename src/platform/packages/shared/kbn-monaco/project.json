{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/refs/heads/master/packages/nx/schemas/project-schema.json",
  "name": "@kbn/monaco",
  "namedInputs": {
    "src": [
      "{projectRoot}/src/**/*",
      "{projectRoot}/**/*.ts",
      "{projectRoot}/src/painless/autocomplete_definitions/boolean_script_field_script_field.json",
      "{projectRoot}/src/painless/autocomplete_definitions/common.json",
      "{projectRoot}/src/painless/autocomplete_definitions/date_script_field.json",
      "{projectRoot}/src/painless/autocomplete_definitions/double_script_field_script_field.json",
      "{projectRoot}/src/painless/autocomplete_definitions/filter.json",
      "{projectRoot}/src/painless/autocomplete_definitions/ip_script_field_script_field.json",
      "{projectRoot}/src/painless/autocomplete_definitions/long_script_field_script_field.json",
      "{projectRoot}/src/painless/autocomplete_definitions/processor_conditional.json",
      "{projectRoot}/src/painless/autocomplete_definitions/score.json",
      "{projectRoot}/src/painless/autocomplete_definitions/string_script_field_script_field.json",
      "!{projectRoot}/target/**/*"
    ]
  },
  "targets": {
    "build": {
      "outputs": [
        "{workspaceRoot}/bazel-bin/src/platform/packages/shared/kbn-monaco"
      ]
    },
    "typecheck": {
      "inputs": [
        "src",
        "^src",
        "global:tsConfigs",
        "^global:tsConfigs"
      ],
      "outputs": [
        "{projectRoot}/target"
      ]
    },
    "jest": {
      "options": {
        "jestConfig": "{projectRoot}/jest.config.js"
      }
    },
    "lint": {}
  },
  "projectType": "library",
  "sourceRoot": "src/platform/packages/shared/kbn-monaco"
}
