{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/refs/heads/master/packages/nx/schemas/project-schema.json",
  "name": "@kbn/docs-utils",
  "namedInputs": {
    "src": [
      "{projectRoot}/**/*.ts",
      "{workspaceRoot}/typings/**/*",
      "!{projectRoot}/**/__fixtures__/**",
      "!{projectRoot}/target/**/*"
    ]
  },
  "targets": {
    "typecheck": {
      "inputs": [
        "src",
        "^src",
        "global:tsConfigs",
        "^global:tsConfigs"
      ],
      "outputs": [
        "{projectRoot}/target"
      ]
    },
    "typecheck_fast": {
      "command": "yarn tsc --build {projectRoot}/tsconfig.type_check.json --pretty",
      "options": {
        "env": {
          "NODE_OPTIONS": "--max-old-space-size=8096"
        }
      }
    },
    "jest": {
      "options": {
        "jestConfig": "{projectRoot}/jest.config.js"
      }
    },
    "lint": {}
  },
  "projectType": "library",
  "sourceRoot": "packages/kbn-docs-utils"
}