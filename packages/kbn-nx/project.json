{
  "_preventUpdate": true,
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/refs/heads/master/packages/nx/schemas/project-schema.json",
  "name": "@kbn/nx",
  "namedInputs": {
    "src": [
      "{projectRoot}/src/**/*.ts",
      "{projectRoot}/src/**/*.json",
      "!{projectRoot}/target/**/*"
    ]
  },
  "targets": {
    "typecheck": {
      "inputs": [
        "src",
        "^src",
        "global:tsConfigs",
        "^global:tsConfigs"
      ],
      "outputs": [
        "{projectRoot}/target"
      ]
    },
    "generateAllTypecheckConfigs": {
      "command": "node scripts/type_check.js --configs-only",
      "cache": false,
      "inputs": []
    },
    "typecheck_fast": {
      "command": "yarn tsc --build {projectRoot}/tsconfig.type_check.json --pretty",
      "options": {
        "env": {
          "NODE_OPTIONS": "--max-old-space-size=8096"
        }
      }
    },
    "jest": {
      "options": {
        "jestConfig": "{projectRoot}/jest.config.js"
      }
    },
    "lint": {}
  },
  "projectType": "library",
  "sourceRoot": "packages/kbn-nx"
}
