{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/refs/heads/master/packages/nx/schemas/project-schema.json",
  "name": "@kbn/test-suites-xpack",
  "namedInputs": {
    "src": [
      "{projectRoot}/**/*",
      "{projectRoot}/./api_integration/apis/logstash/pipeline/fixtures/*.json",
      "{projectRoot}/./api_integration/apis/logstash/pipelines/fixtures/*.json",
      "{projectRoot}/./api_integration/apis/telemetry/fixtures/*.json",
      "{projectRoot}/./monitoring_api_integration/fixtures/**/*.json",
      "{workspaceRoot}/typings/**/*",
      "{projectRoot}/../../src/platform/packages/shared/kbn-test/types/ftr_globals/**/*",
      "!{projectRoot}/security_solution_cypress/cypress/**/*",
      "!{projectRoot}/target/**/*",
      "!{projectRoot}/*/plugins/**/*",
      "!{projectRoot}/*/packages/**/*",
      "!{projectRoot}/*/*/packages/**/*",
      "!{projectRoot}/security_solution_api_integration/**/*",
      "!{projectRoot}/security_solution_endpoint/**/*"
    ]
  },
  "targets": {
    "typecheck": {
      "inputs": [
        "src",
        "^src",
        "global:tsConfigs",
        "^global:tsConfigs"
      ],
      "outputs": [
        "{projectRoot}/target"
      ]
    },
    "typecheck_fast": {
      "command": "yarn tsc --build {projectRoot}/tsconfig.type_check.json --pretty",
      "options": {
        "env": {
          "NODE_OPTIONS": "--max-old-space-size=8096"
        }
      }
    },
    "lint": {}
  },
  "projectType": "library",
  "sourceRoot": "x-pack/test"
}